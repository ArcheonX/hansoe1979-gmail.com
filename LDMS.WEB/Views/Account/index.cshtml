<body>
    <div id="header" style="position:absolute; top:0px; left:0px; height:0px; right:0px;overflow:no-content;">
            <header class="topbar">
                <nav class="navbar top-navbar navbar-toggleable-sm navbar-light">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="index.html">
                            <b>
                                <img src="~/assets/images/logo-light-icon.png" class="light-logo" alt="homepage" />
                                <img src="~/assets/images/logo-light-text.png" class="light-logo" alt="homepage" />
                            </b>
                        </a>
                    </div>
                    <div class="head-title"><h1>Learning and Development Management System</h1></div>
                    <div class="logo-img"><span class="pull-right"><img class="ldms-logo" src="~/assets/images/svg/STT.svg" alt="homepage" /></span></div>
                </nav>
            </header>
        </div>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                </div>
                <div class="card-body">
                    <form id="frm-login">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" id="txtUserName" placeholder="username">

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" id="txtPassword" placeholder="password">
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox" id="chkRememberMe">Remember Me
                        </div>
                    </form>
                    <div class="form-group">
                        <input type="submit" onclick="OnAuthentication()" value="Login" class="btn float-right login_btn">
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center">
                        <a href="#">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
