<div class="panel panel-default" style="margin-top:-15px;width:100%;">
    <div class="panel-body" style="width:100%;">
        <div class="form-horizontal" style="margin-top:25px">
            <div class="row form-group">
                <div class="col-sm-2 col-md-2 offset-2"> 
                    <input type='checkbox' name='Instructor' value='Instructor' id="Instructor" /><label for="Instructor">Instructor</label> 
                </div>
                <div class="col-sm-2 col-md-2">
                    <input type='checkbox' name='Platform' value='Platform' id="Platform" /><label for="Platform">Platform</label> 
                </div>
                <div class="col-sm-2 col-md-2">
                    <input type='checkbox' name='Course' value='Course' id="Course" /><label for="Course">Course</label> 
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Instructor ID</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <input type="text" style="width: 100%" class="form-control input-sm" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Platform</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <select id="selectPlatform" name="selectPlatform" title="Please Enter Section" class="form-control" style="width: 100%">
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Course</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <select id="selectCourse" name="selectCourse" title="Please Enter Course" class="form-control" style="width: 100%">
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Department</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <select required id="selectMasterReportDepartment" name="selectMasterReportDepartment" title="Please Enter Department" class="form-control" style="width: 100%">
                        @*@foreach (var std in ViewData["Department"] as IList<LDMS.ViewModels.LDMS_M_Department>)
                        {
                            <option value="@std.ID">@std.DepartmentID - @std.DepartmentName_EN</option>
                        }*@
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Job Grade</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <select id="selectMasterReportJobGrade" name="selectMasterReportJobGrade" class="form-control" style="width: 100%">
                        @*@foreach (var std in ViewData["JobsGrade"] as IList<LDMS.ViewModels.LDMS_M_JobGrade>)
                        {
                            <option value="@std.ID">@std.JobGradeID - @std.JobGradeName_EN</option>
                        }*@
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Status</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <select id="selectMasterReportStatus" name="selectMasterReportStatus" class="form-control" style="width: 100%">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Training Date</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <input id="dteTrainingDateFrm" type="datetime" class="form-control"  style="width: 100%" />
                </div>
                <div class="col-sm-3 col-md-3">
                    <input id="dteTrainingDateTo" class="form-control"  type="datetime" style="width: 100%" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2 col-md-2">
                    <span class="pull-right">
                        <label class="LabelCaption">Training Status</label>
                    </span>
                </div>
                <div class="col-sm-3 col-md-3">
                    <select id="selectMasterReportStatus" name="selectMasterReportStatus" class="form-control" style="width: 100%">
                        <option value="1">Qualified</option>
                        <option value="0">UnQualified</option>
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-1 col-md-1 offset-10">
                    <button id="btnSaveEmployee" class="btn btn-success waves-effect waves-light" style="width:100%"> Export - I </button>
                </div> 
            </div>
        </div>
    </div>
</div>