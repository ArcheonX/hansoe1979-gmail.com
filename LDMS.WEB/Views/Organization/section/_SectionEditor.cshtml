<div style="width: 100%; border-width: thin; border-style: solid;">
    <div class="panel panel-default" style="width: 100%;margin-top:25px;">
        <div class="panel-body panel-body-begin">
            <div class="form-horizontal">
                <input type="hidden" id="sectionId" value="null" />
                <div class="row form-group">
                    <div class="col-sm-2 col-md-2">
                        <span class="pull-right" style="vertical-align:middle">
                            <label class="LabelCaption">Division</label>
                        </span>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <input type="text"
                               style="width: 100%"
                               id="txtEditDivision"
                               disabled="disabled"
                               value=""
                               class="form-control" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2 col-md-2">
                        <span class="pull-right" style="vertical-align: middle">
                            <label class="LabelCaption">Department</label>
                        </span>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <input type="text"
                               style="width: 100%"
                               id="txtEditDepartment"
                               disabled="disabled"
                               value="Human Resource"
                               class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="row form-group"> 
                    <div class="col-sm-2 col-md-2 offset-9">
                        <a id="btnAddSection" href="#section-Editor-modal" class="btn btn-outline-success waves-effect waves-light  section-Editor-modal" style="width:100%">
                            <img style="width:25px;height:20px" src="~/assets/images/svg/add-button-circle.svg" />&nbsp;&nbsp;Add Section
                        </a>
                    </div>

                    <div class="col-sm-1 col-md-1" style="margin-left:-25px">
                        <button id="btnBack" class="btn btn-outline-danger inactive waves-effect waves-light" style="width:100%">
                            <img style="width:25px;height:20px" src="~/assets/images/svg/icon-l-red.svg" />&nbsp;&nbsp;Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div style="width: 100%; border-width: thin; border-style: solid;">
    <div class="panel panel-default" style="width: 100%;margin-top:25px;"> 
        <div class="panel-body" style="width:100%;margin-top:25px;">
            <div class="table-responsive">
                @await Html.PartialAsync("section/_sectionListView")
            </div>
        </div>
    </div>
</div>

<div id="section-Editor-modal" class="white-popup-block mfp-hide" style="width:600px;background-color:#ffffff;margin-left:25%;border:thin;">
    <div class="panel panel-primary" style="width:100%;">
        <div class="panel-body">
            <div class="form-horizontal">
                <form id="frmSectionEditor">
                    <div class="row form-group" style="padding-top: 25px;">
                        <div class="col-sm-12 col-md-12">
                           <input type="hidden" id="txtSectionId" />
                        </div> 
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-4 col-md-4">
                            <span class="pull-right" style="vertical-align:middle">
                                <label class="LabelCaption">Section Abbreviation<font color="#f60b0b">*</font></label>
                            </span>
                        </div>
                        <div class="col-sm-7 col-md-7">
                            <input type="text"
                                   title="Please Enter Section Abbreviation"
                                   id="txtSectionAbbreviation"
                                   required
                                   style="width: 100%"
                                   class="form-control required" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-sm-4 col-md-4">
                            <span class="pull-right" style="vertical-align:middle">
                                <label class="LabelCaption">Section Name<font color="#f60b0b">*</font></label>
                            </span>
                        </div>
                        <div class="col-sm-7 col-md-7">
                            <input type="text"
                                   title="Please Enter Section Name"
                                   id="txtSectionName"
                                   required
                                   style="width: 100%"
                                   class="form-control required" />
                        </div>
                    </div>
                </form>
                <div class="row form-group"  style="margin-top:25px;padding-bottom:25px;">
                    <div class="col-sm-3 col-md-3 offset-6">
                        <button id="btnSavSection" class="btn btn-outline-success waves-effect waves-light" style="width:100%">
                            <img style="width:25px;height:20px" src="~/assets/images/svg/save.svg" />&nbsp;&nbsp;Save
                        </button>
                    </div>
                    <div class="col-sm-3 col-md-3" style="margin-left:-25px;">
                        <button id="btnBack" class="btn btn-outline-danger inactive waves-effect waves-light popup-modal-dismiss" style="width:100%">
                            <img style="width:25px;height:20px" src="~/assets/images/svg/icon-l-red.svg" />&nbsp;&nbsp;Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>