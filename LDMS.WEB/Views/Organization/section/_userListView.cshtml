                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row form-group" style="margin-top:15px;margin-bottom:15px;">
                    @*<div class="col-sm-2 col-md-2 offset-8">
                        <button id="btnAllowImport" class="btn btn-outline-primary waves-effect waves-light" style="width:100%">
                            <img style="width:25px;height:20px" src="~/assets/images/svg/right.svg" />&nbsp;&nbsp;Import
                        </button>
                    </div>*@
                    <div class="popup-modal-dismiss col-sm-2 col-md-2 offset-10" style="margin-right:15px;">
                        <button id="btnBack" class="btn btn-outline-danger inactive waves-effect waves-light" style="width:98%">
                            <img style="width:25px;height:20px" src="~/assets/images/svg/icon-cross-red.svg" />&nbsp;&nbsp;Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 