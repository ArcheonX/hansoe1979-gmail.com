                        <table class="display dataTable" id="dtImportExcel" style="width:98%;margin-left:10px;margin-right:10px;">
                            <thead>
                                <tr>
                                    <th style="text-align:center;width:10%">Employee ID</th>
                                    <th style="text-align:center;width:10%">Employee Name</th>
                                    <th style="text-align:center;width:10%">Job Grade</th>
