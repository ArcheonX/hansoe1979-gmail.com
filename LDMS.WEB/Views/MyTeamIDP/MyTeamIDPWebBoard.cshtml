@{
    ViewData["Title"] = "MyTeamIDP-Topic";
    ViewData["MainTitle"] = "MyTeamIDP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model LDMS.ViewModels.LDMS_T_IDP
    <div class="panel panel-primary" style="margin-top:-15px;width:100%;">
        <div class="panel panel-default" style="width:100%;border-width:thin;border-style:solid;">
            <div class="panel-body" style="width:100%;">
                <form id="frmMain" class="form" method="post" enctype="multipart/form-data" style="width:100%">
                    @Html.AntiForgeryToken()  @*CSRF Protected*@
                    <div class="form-horizontal" style="margin-top:25px; margin-left:10px ">
                        <div class="row form-group">
                            <div class="col-sm-8 col-md-8">
                                <span class="pull-left Topic">
                                    <label class="LabelCaption" style="font-weight:bold;">IDP Objective</label>
                                </span>
                            </div>

                            <div class="col-sm-2 col-md-2 offset-10">
                                <a id="btnBack" class="btn btn-outline-danger inactive waves-effect waves-light" style="width:70%;">
                                    <img style="width:25px;height:20px" src="~/assets/images/svg/PDF.svg" />&nbsp;&nbsp;PDF
                                </a>
                            </div>

                        </div>
                        <div class="row form-group">
                            <div class="col-sm-2 col-md-2 " style="margin-top:0px; margin-left:10px">
                                <div class="user-profile-coaching">
                                    <div class="profile-img">
                                        @*<img src='@Url.Content(@HttpContextAccessor.HttpContext.Request.Cookies["FACEIMAGE"])' alt="user" />*@
                                        <img src="~/assets/images/users/virgil.jpg" class="img-fluid img-thumbnail" alt="virgil" width='137' height='165'>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3 col-md-4" style="margin-top:0px; margin-left:10px">
                                <div class="profile-text">
                                    <a aria-expanded="false">Name : Mr. Virgil van Dijk </a>
                                </div>
                                <div class="profile-text">
                                    <a aria-expanded="false">Position :Center Back</a>
                                </div>
                                <div class="profile-text">
                                    <a aria-expanded="false">Service (Year) : 5 </a>
                                </div>
                                <div class="profile-text">
                                    <a aria-expanded="false">IDP Time Line : 1 year 1 month 5 Day </a>
                                </div>
                                <div class="profile-text">
                                    <a aria-expanded="false">IDP Start : 1 May 2020 </a>
                                </div>
                                <div class="profile-text">
                                    <a aria-expanded="false">IDP End : 30 April 2021</a>
                                </div>
                                <div class="profile-text">
                                    <a aria-expanded="false">IDP Status : On Progress </a>
                                </div>
                            </div>


                            <div class="col-sm-6 col-md-5" style="margin-top:10px; margin-left:0px">
                                <textarea id="txtIDPObjective"
                                          name="txtIDPObjective"
                                          asp-for="IDP_Objective"
                                          rows="5" style="width:100%"
                                          disabled="disabled">
                            </textarea>
                            </div>


                        </div>
                        <div class="row form-group" style="margin-top:-2em; margin-left:11em">
                            <div class="col-sm-4 col-md-4 offset-3">
                                <span class="pull-right">
                                    <label class="LabelCaption" style="font-weight:bold;">Topic Reivew :  </label>
                                </span>
                            </div>
                        </div>
                        <div class="row form-group" style="margin-top:0em; margin-left:9em">
                            <div class="col-sm-4 col-md-4 offset-5">
                                <span class="pull-right">
                                    <label class="LabelCaption" style="font-weight:bold;">Last Update : </label> 20/06/2020 18:39
                                </span>
                            </div>



                        </div>

                    </div>

                    <div style="border-width:thin; border-style:solid; margin-left:0px; margin-top: 5px; margin-bottom:5px; width:100%;display:block"></div>

                   
                </form>
            </div>
        </div>
    </div>