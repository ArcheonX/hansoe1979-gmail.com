@{
    ViewData["Title"] = "MyTeamIDP-Topic";
    ViewData["MainTitle"] = "MyTeamIDP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model Tuple<LDMS.ViewModels.LDMS_T_IDP_Master_Result, LDMS.ViewModels.LDMS_T_IDP, LDMS.ViewModels.LDMS_T_IDP_Master>

<div class="panel panel-primary" style="margin-top:-15px;width:100%;">
    <div class="panel panel-default" style="width:100%;border-width:thin;border-style:solid;">
        <div class="panel-body" style="width:100%;">
            <form id="frmMain" class="form" method="post" enctype="multipart/form-data" style="width:100%">
                @Html.AntiForgeryToken()  @*CSRF Protected*@
                <div class="form-horizontal" style="margin-top:25px; margin-left:10px ">
                    <div class="row form-group">
                        <div class="col-sm-8 col-md-8">
                            <span class="pull-left Topic">
                                <label class="LabelCaption" style="font-weight:bold;">IDP Objective</label>
                            </span>
                        </div>

                        <div class="col-sm-2 col-md-2 offset-10">
                            <a id="btnBack" class="btn btn-outline-danger inactive waves-effect waves-light" style="width:70%;">
                                <img style="width:25px;height:20px" src="~/assets/images/svg/PDF.svg" />&nbsp;&nbsp;PDF
                            </a>
                        </div>

                    </div>
                    <div class="row form-group">
                        <div class="col-sm-2 col-md-3 " style="margin-top:0px; margin-left:1px">
                            <div class="user-profile-coaching">
                                <div class="profile-img">
                                    @*<img src='@Url.Content(@HttpContextAccessor.HttpContext.Request.Cookies["FACEIMAGE"])' alt="user" />*@
                                    <img src="~/assets/images/users/virgil.jpg" class="img-fluid img-thumbnail" alt="virgil" width='137' height='165'>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-3">
                            <div class="row form-group">
                                <div class="col-sm-6 col-md-10">
                                    <span class="pull-left">
                                        <a aria-expanded="false" style="text-align:left">Name : Mr. Virgil van Dijk </a>
                                    </span>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-6 col-md-10">
                                    <span class="pull-left">
                                        <a aria-expanded="false" style="text-align:left">Position :Center Back </a>
                                    </span>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-6 col-md-12">
                                    <span class="pull-left">
                                        <a aria-expanded="false" style="text-align:left">IDP Time Line : 1 year 1 month 5 Day </a>
                                    </span>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-sm-6 col-md-6">
                                    <span class="pull-left">
                                        <label class="LabelCaption">IDP Start : <font color="#f60b0b">*</font></label>
                                        <input id="dteIDPStartDate" asp-for="Item3.IDP_StartDate" type="datetime" autocomplete="off" class="form-control" style="width: 100%" />
                                    </span>
                                </div>
                                <div class="col-sm-6 col-md-4">

                                </div>

                            </div>
                            <div class="row form-group">
                                <div class="col-sm-6 col-md-6">
                                    <span class="pull-left">
                                        <label class="LabelCaption">IDP End : <font color="#f60b0b">*</font></label>
                                    </span>
                                </div>
                                <div class="col-sm-6 col-md-4">
                                    <input id="dteIDPStartDate" asp-for="Item3.IDP_EndDate" type="datetime" autocomplete="off" class="form-control" style="width: 100%" />
                                </div>

                            </div>
                            @*<div class="profile-text">
                                    <a aria-expanded="false">IDP End : 30 April 2021</a>
                                </div>*@
                            <div class="profile-text">
                                <a aria-expanded="false">IDP Status : On Progress </a>
                            </div>
                        </div>


                        <div class="col-sm-6 col-md-5" style="margin-top:10px; margin-left:0px">
                            <textarea id="txtIDPObjective"
                                      name="txtIDPObjective"
                                      asp-for="Item2.IDP_Objective"
                                      rows="5" style="width:100%">
                            </textarea>
                        </div>


                    </div>
                    <div class="row form-group" style="margin-top:-2em; margin-left:11em">
                        <div class="col-sm-4 col-md-4 offset-3">
                            <span class="pull-right">
                                <label class="LabelCaption" style="font-weight:bold;">Topic Reivew :  </label>
                            </span>
                        </div>
                    </div>
                    <div class="row form-group" style="margin-top:0em; margin-left:9em">
                        <div class="col-sm-4 col-md-4 offset-5">
                            <span class="pull-right">
                                <label class="LabelCaption" style="font-weight:bold;">Last Update : </label> 20/06/2020 18:39
                            </span>
                        </div>



                    </div>

                </div>
                <div style="border-width:thin; border-style:solid; margin-left:0px; margin-top: 5px; margin-bottom:5px; width:100%;display:block"></div>

                <div id="divTopicRender" style="display:none">

                </div>
                <div id="divTopic" style="margin-top:25px; margin-left:10px; display:none;">
                    <div class="table-responsive m-t-40">
                        <table class="display dataTable" width="100%" id="dtTopicList">
                            <thead>
                                <tr>
                                    <!--<th style="text-align:center;"></th>-->
                                    <th style="text-align:center;">No</th>
                                    <th style="text-align:center;width:200px">Development Topic</th>
                                    <th style="text-align:center;width:150px">Expected Outcome</th>
                                    <th style="text-align:center;width:150px">How to Develop ?</th>
                                    <th style="text-align:center;width:100px">Measurement Outcome</th>
                                    <th style="text-align:center;width:200px">By When</th>
                                    <th style="text-align:center;width:100px">Status</th>
                                    <th style="text-align:center;width:50px">Review</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>
@section Scripts{
    <style type="text/css">
        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>

    <script type="text/javascript">
        //alert('document');
        $(document).ready(function () {
            $("input[type='datetime']").datepicker();
        }
    </script>
}